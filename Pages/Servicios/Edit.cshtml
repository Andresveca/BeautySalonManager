@page
@model BeautySalon.Pages.Servicios.EditModel
@{
	ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Servicio.Id" />
		<div class="form-group">
			<label asp-for="Servicio.Nombre" class="control-label"></label>
			<input asp-for="Servicio.Nombre" class="form control" />
			<span asp-validation-for="Servicio.Nombre" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Servicio.Descripcion" class="control-label"></label>
			<input asp-for="Servicio.Descripcion" class="form-control" />
			<span asp-validation-for="Servicio.Descripcion" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Servicio.Precio" class="control-label"></label>
			<input asp-for="Servicio.Precio" class="form-control" />
			<span asp-validation-for="Servicio.Precio" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Servicio.DuracionEstimada" class="control-label"></label>
			<input asp-for="Servicio.DuracionEstimada" class="form-control" />
			<span asp-validation-for="Servicio.DuracionEstimada" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="submit" value="Save" class="btn btn-success" />
			<a asp-page="./Index" class="btn btn-primary">Back to List</a>
		</div>
	</form>
	</div>
</div

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
