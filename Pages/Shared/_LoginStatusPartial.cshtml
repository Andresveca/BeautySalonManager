@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="d-inline" asp-page="/InicioSesion/Logout">
        <span>Welcome @User.Identity.Name</span>
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
    <a class="btn btn-outline-primary rounded-pill" asp-page="/InicioSesion/Login">Login</a>
}