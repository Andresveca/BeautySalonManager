@page
@model BeautySalon.Pages.Empleados.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Empleado</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleado.Nombre" class="control-label"></label>
                <input asp-for="Empleado.Nombre" class="form-control" />
                <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Apellido" class="control-label"></label>
                <input asp-for="Empleado.Apellido" class="form-control" />
                <span asp-validation-for="Empleado.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Especialidad" class="control-label"></label>
                <input asp-for="Empleado.Especialidad" class="form-control" />
                <span asp-validation-for="Empleado.Especialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.HorarioLaboral" class="control-label"></label>
                <input asp-for="Empleado.HorarioLaboral" class="form-control" />
                <span asp-validation-for="Empleado.HorarioLaboral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}