@page
@model BeautySalon.Pages.Empleados.IndexModel

@{
    ViewData["Title"] = "Index Empleados";
}

<h1>Index Empleados</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Empleado[0].Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Empleado[0].Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Empleado[0].Especialidad)</th>
            <th>@Html.DisplayNameFor(model => model.Empleado[0].HorarioLaboral)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Empleado)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Especialidad)</td>
                <td>@Html.DisplayFor(modelItem => item.HorarioLaboral)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>